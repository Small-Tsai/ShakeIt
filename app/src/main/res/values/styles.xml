<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="black_shadow">
        <item name="android:shadowRadius">0.5</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:shadowColor">#1E1818</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="pageTitle">
        <item name="android:shadowRadius">0.5</item>
        <item name="android:shadowColor">#1E1818</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="roundedCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

</resources>