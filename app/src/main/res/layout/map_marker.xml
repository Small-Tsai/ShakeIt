<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/mapIcon"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:src="@drawable/location_brown2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/map_icon" />

        <TextView
            android:id="@+id/marker_shop"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_marginTop="4sp"
            android:background="@drawable/circle_icon"
            android:orientation="horizontal"
            android:paddingStart="3.5sp"
            android:shadowColor="@color/white"
            android:shadowRadius="0.2"
            android:paddingTop="1sp"
            android:singleLine="true"
            android:textColor="@color/grey2"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="@+id/mapIcon"
            app:layout_constraintStart_toStartOf="@+id/mapIcon"
            app:layout_constraintTop_toTopOf="@+id/mapIcon" />

        <TextView
            android:id="@+id/marker_branch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_radius2"
            android:backgroundTint="@color/marker_branch_color"
            android:fontFamily="@font/roboto"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp"
            android:singleLine="true"
            android:textColor="@color/grey2"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/mapIcon"
            app:layout_constraintStart_toStartOf="@+id/mapIcon"
            app:layout_constraintTop_toBottomOf="@+id/mapIcon" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>