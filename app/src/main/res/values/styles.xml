<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="black_shadow">
        <item name="android:shadowRadius">0.5</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:shadowColor">#1E1818</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="pageTitle">
        <item name="android:shadowRadius">0.5</item>
        <item name="android:shadowColor">#1E1818</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="pageContentTitle">
        <item name="android:shadowRadius">0.5</item>
<!--        <item name="android:background">@color/grey2</item>-->
        <item name="android:shadowColor">#1E1818</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">16dp</item>
<!--        <item name="android:layout_marginTop">16dp</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="roundedCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="loginCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">35dp</item>
        <item name="cornerSizeTopRight">35dp</item>
    </style>

    <style name="homeIconCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
    </style>

    <style name="homedialog_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/grey2</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MYBottomSheetStyle</item>
    </style>
    <style name="MYBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/translucent_40</item>
    </style>

    <style name="CommentDialog">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="loadingStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>


</resources>